<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="@dimen/list_item_padding"
              android:background="?attr/selectableItemBackground"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/time"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/list_item_time_size"
        android:layout_marginTop="@dimen/list_item_text_margin"
        android:layout_marginBottom="@dimen/list_item_time_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text"
        android:layout_marginBottom="@dimen/list_item_text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_text_size"
        android:textColor="@android:color/black"/>

</LinearLayout>